<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aditionLeayout"
    android:visibility="visible"
    android:layout_marginTop="@dimen/_18sdp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_vertical"
            android:id="@+id/aditionDetailsTitle"
            android:text="Additional Details"
            android:drawablePadding="@dimen/_8sdp"
            android:textColor="#454545"
            android:drawableStart="@drawable/four_icon"
            android:drawableEnd="@drawable/next_form_icon"
            android:textSize="@dimen/_13ssp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:id="@+id/aditionFormLayout"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="Docket Remarks"
                        android:textColor="#454545"
                        android:textSize="@dimen/_12ssp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:id="@+id/remark"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/edit_form_outline"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/secondry_text"
                        android:hint="Type Here.."
                        android:textColorHint="@color/secondry_text"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="Additional Charges"
                        android:textColor="#454545"
                        android:textSize="@dimen/_12ssp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginRight="3dp"
                        android:id="@+id/AdditionalCharges"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/edit_form_outline"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/blue"
                        android:hint="0.00"
                        android:textColorHint="@color/blue"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="Add. Charg. Remarks"
                        android:textColor="#454545"
                        android:textSize="@dimen/_12ssp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/AddChargRemarks"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/edit_form_outline"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/secondry_text"
                        android:hint="Type Here.."
                        android:textColorHint="@color/secondry_text"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:text="Add Additional Docket(s)"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableStart="@drawable/ad_icon"
                android:id="@+id/additionFormAdd"
                android:drawableTint="@color/blue"
                android:drawablePadding="@dimen/_4sdp"
                android:textColor="@color/blue"
                android:textSize="@dimen/_11ssp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/removeForm"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="Remove"
                        android:layout_marginEnd="@dimen/_18sdp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_12ssp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"

                        android:background="@drawable/blue_button"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_8sdp"
                        android:drawableEnd="@drawable/form_but_next"
                        android:drawableTint="@color/white"
                        android:id="@+id/next"
                        android:text="Next"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>