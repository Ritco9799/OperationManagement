<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:visibility="visible"
    android:layout_marginEnd="@dimen/_16sdp"
    android:layout_marginStart="@dimen/_16sdp"
    android:layout_marginTop="@dimen/_12sdp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_vertical"
            android:text="Bill to"
            android:textColor="#454545"
            android:textSize="@dimen/_12ssp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginRight="3dp"
            android:layout_weight=".28"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/edit_form_outline"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_bil_to"
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:autofillHints="Consignor"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_4sdp"
                android:src="@drawable/down_arrow_icon" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_vertical"
            android:text="Consignor"
            android:textColor="#454545"
            android:textSize="@dimen/_12ssp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/consignor"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/edit_form_outline"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/secondry_text"
            android:hint="Smart Search"
            android:textColorHint="@color/secondry_text"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:text="Consignee"
                android:textColor="#454545"
                android:textSize="@dimen/_12ssp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="@dimen/_4sdp"
                android:id="@+id/consignee_type"
                android:background="@drawable/edit_form_outline"
                android:fontFamily="@font/roboto_regular"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/secondry_text"
                android:hint="Type Here.."
                android:textColorHint="@color/secondry_text"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:text="Origin"
                android:textColor="#454545"
                android:textSize="@dimen/_12ssp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/edittext_out_fill_gray"
                android:fontFamily="@font/roboto_regular"
                android:paddingLeft="@dimen/_10sdp"
                android:id="@+id/origin"
                android:textColor="@color/secondry_text"
                android:hint="Jaipur"
                android:textColorHint="@color/blue"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bil_next"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/blue_button"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableEnd="@drawable/form_but_next"
            android:drawableTint="@color/white"
            android:onClick="bill_next"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />
    </RelativeLayout>
</LinearLayout>
</RelativeLayout>